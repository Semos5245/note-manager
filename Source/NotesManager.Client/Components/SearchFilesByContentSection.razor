<MudCard Class="inherit-height" Style="height:400px">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6" Color="Color.Dark">Filtered files</MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        @if (FilteredFiles is null)
        {
            <Spinner />
        }

        else
        {
            <MudSimpleTable Hover="true" Style="height:300px; margin-top: 2px;">
                <tbody>
                    @foreach (var file in FilteredFiles)
                    {
                        <FileByContentRow FilteredTextFile="file" OnTextFileByContentSelected="TextFileByContentSelected"
                                          IsSelected="file == SelectedTextFile" SearchText="@SearchText">
                        </FileByContentRow>
                    }
                </tbody>
            </MudSimpleTable>
        }

    </MudCardContent>
</MudCard>